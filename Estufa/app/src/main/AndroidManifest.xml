<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="estufa.com.br.estufa">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="Estufa"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/theme_estufa_app">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.CadastrarActivity"
            android:theme="@style/theme_estufa_app"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.TelaInicialActivity"
            android:theme="@style/theme_estufa_app"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.ContaActivity"
            android:theme="@style/theme_estufa_app"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.EditaSenhaActivity"
            android:theme="@style/theme_estufa_app"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.InfoAlteracaoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.GraficoActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>